@using Zumba.DTO
 @model IEnumerable<HistoryDTO>

<div class="container text-white">
	<h1 class="text-center">Historie plateb</h1>
	<div asp-validation-summary="All" class="custom-validation-summary"></div>
	@* 	<form method="post" asp-action="DeleteAllHistory" class="d-flex justify-content-center m-2">

	<button type="submit" class="btn btn-danger">SMAZAT HISTORII</button>

	</form> *@
